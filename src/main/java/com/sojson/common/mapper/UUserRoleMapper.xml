<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sojson.common.dao.UUserRoleMapper" >
  <resultMap id="BaseResultMap" type="com.sojson.common.model.UUserRole" >
    <result column="uid" property="uid" jdbcType="BIGINT" />
    <result column="rid" property="rid" jdbcType="BIGINT" />
  </resultMap>
  <insert id="insert" parameterType="com.sojson.common.model.UUserRole" >
    insert into u_user_role (uid, rid)
    values (#{uid,jdbcType=BIGINT}, #{rid,jdbcType=BIGINT})
  </insert>
   <!-- 根据用户ID删除-->
  <delete id="deleteByUserId">
  	delete from u_user_role where uid =  #{id,jdbcType=BIGINT}
  </delete>
  <delete id="deleteRoleByUserIds">
  	delete from u_user_role where uid in(${userIds})
  </delete>
  <!-- 根据用户roleId查询用户ID -->
  <select id="findUserIdByRoleId" resultType="long">
  	select uid from u_user_role where rid =  #{id,jdbcType=BIGINT}
  </select>
  
  <insert id="insertSelective" parameterType="com.sojson.common.model.UUserRole" >
    insert into u_user_role
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="uid != null" >
        uid,
      </if>
      <if test="rid != null" >
        rid,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="uid != null" >
        #{uid,jdbcType=BIGINT},
      </if>
      <if test="rid != null" >
        #{rid,jdbcType=BIGINT},
      </if>
    </trim>
  </insert>
</mapper>